@model IEnumerable<CQRSRentACar.CQRSPattern.Results.CarResults.GetCarQueryResult>
@{
    ViewData["Title"] = "Araç Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    var allCars = Model.ToList();
    var queryParams = Context.Request.Query;
    
    var filteredCars = allCars.AsQueryable();
    
    if (!string.IsNullOrEmpty(queryParams["minPrice"]) && int.TryParse(queryParams["minPrice"], out int minPrice))
    {
        filteredCars = filteredCars.Where(c => c.Price >= minPrice);
    }
    
    if (!string.IsNullOrEmpty(queryParams["maxPrice"]) && int.TryParse(queryParams["maxPrice"], out int maxPrice))
    {
        filteredCars = filteredCars.Where(c => c.Price <= maxPrice);
    }
    
    if (!string.IsNullOrEmpty(queryParams["minYear"]) && int.TryParse(queryParams["minYear"], out int minYear))
    {
        filteredCars = filteredCars.Where(c => c.ModelYear >= minYear);
    }
    
    if (!string.IsNullOrEmpty(queryParams["maxYear"]) && int.TryParse(queryParams["maxYear"], out int maxYear))
    {
        filteredCars = filteredCars.Where(c => c.ModelYear <= maxYear);
    }
    
    if (!string.IsNullOrEmpty(queryParams["minRating"]) && int.TryParse(queryParams["minRating"], out int minRating))
    {
        filteredCars = filteredCars.Where(c => c.Rating >= minRating);
    }
    
    if (!string.IsNullOrEmpty(queryParams["maxRating"]) && int.TryParse(queryParams["maxRating"], out int maxRating))
    {
        filteredCars = filteredCars.Where(c => c.Rating <= maxRating);
    }
    
    if (!string.IsNullOrEmpty(queryParams["minKm"]) && int.TryParse(queryParams["minKm"], out int minKm))
    {
        filteredCars = filteredCars.Where(c => c.Kilometer >= minKm);
    }
    
    if (!string.IsNullOrEmpty(queryParams["maxKm"]) && int.TryParse(queryParams["maxKm"], out int maxKm))
    {
        filteredCars = filteredCars.Where(c => c.Kilometer <= maxKm);
    }
    
    var cars = filteredCars.ToList();
    var totalCars = cars.Count;
    var carsPerPage = 9;
    var currentPage = 1;
    if (queryParams.ContainsKey("page") && int.TryParse(queryParams["page"], out int page))
    {
        currentPage = page;
    }
    var totalPages = (int)Math.Ceiling((double)totalCars / carsPerPage);
    var startIndex = (currentPage - 1) * carsPerPage;
    var endIndex = Math.Min(startIndex + carsPerPage, totalCars);
    var paginatedCars = cars.Skip(startIndex).Take(carsPerPage);
}

<div class="container-fluid page-header">
    <h1 class="display-3 text-uppercase text-white mb-3">Araç Listesi</h1>
    <div class="d-inline-flex text-white">
        <h6 class="text-uppercase m-0"><a class="text-white" href="">Ana Sayfa</a></h6>
        <h6 class="text-body m-0 px-3">/</h6>
        <h6 class="text-uppercase text-body m-0">Araç Listesi</h6>
    </div>
</div>

<div class="container-fluid py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bg-light p-4 mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="mb-0"><i class="fas fa-search"></i> Seçilen Arama Kriterleri</h4>
                        <div class="d-flex align-items-center">
                            <span class="badge bg-info me-3">@totalCars araç bulundu</span>
                            <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="collapse" data-bs-target="#filterCollapse">
                                <i class="fas fa-filter"></i> Filtrele
                            </button>
                        </div>
                    </div>
                    
                    @if (totalPages > 1)
                    {
                        <div class="mb-3">
                            <nav aria-label="Sayfa navigasyonu">
                                <ul class="pagination pagination-sm justify-content-center mb-0">
                                    @{
                                        var buildUrl = new Func<int, string>(page => {
                                            var url = "?page=" + page;
                                            if (!string.IsNullOrEmpty(queryParams["carType"])) url += "&carType=" + queryParams["carType"];
                                            if (!string.IsNullOrEmpty(queryParams["pickUpAirportId"])) url += "&pickUpAirportId=" + queryParams["pickUpAirportId"];
                                            if (!string.IsNullOrEmpty(queryParams["dropOffAirportId"])) url += "&dropOffAirportId=" + queryParams["dropOffAirportId"];
                                            if (!string.IsNullOrEmpty(queryParams["pickUpDate"])) url += "&pickUpDate=" + queryParams["pickUpDate"];
                                            if (!string.IsNullOrEmpty(queryParams["dropOffDate"])) url += "&dropOffDate=" + queryParams["dropOffDate"];
                                            if (!string.IsNullOrEmpty(queryParams["minPrice"])) url += "&minPrice=" + queryParams["minPrice"];
                                            if (!string.IsNullOrEmpty(queryParams["maxPrice"])) url += "&maxPrice=" + queryParams["maxPrice"];
                                            if (!string.IsNullOrEmpty(queryParams["minYear"])) url += "&minYear=" + queryParams["minYear"];
                                            if (!string.IsNullOrEmpty(queryParams["maxYear"])) url += "&maxYear=" + queryParams["maxYear"];
                                            if (!string.IsNullOrEmpty(queryParams["minRating"])) url += "&minRating=" + queryParams["minRating"];
                                            if (!string.IsNullOrEmpty(queryParams["maxRating"])) url += "&maxRating=" + queryParams["maxRating"];
                                            if (!string.IsNullOrEmpty(queryParams["minKm"])) url += "&minKm=" + queryParams["minKm"];
                                            if (!string.IsNullOrEmpty(queryParams["maxKm"])) url += "&maxKm=" + queryParams["maxKm"];
                                            return url;
                                        });
                                    }
                                    
                                    @if (currentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@buildUrl(currentPage - 1)">«</a>
                                        </li>
                                    }
                                    
                                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == currentPage ? "active" : "")">
                                            <a class="page-link" href="@buildUrl(i)">@i</a>
                                        </li>
                                    }
                                    
                                    @if (currentPage < totalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@buildUrl(currentPage + 1)">»</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                            <div class="text-center">
                                <small class="text-muted">Sayfa @currentPage/@totalPages (@totalCars araçtan @(startIndex + 1)-@endIndex arası)</small>
                            </div>
                        </div>
                    }
                    
                    <div class="collapse" id="filterCollapse">
                        <div class="bg-white p-3 rounded mb-3">
                            <form method="get" action="@Url.Action("SearchCars", "Car")">
                                <input type="hidden" name="carType" value="@ViewBag.SearchParams?.CarType">
                                <input type="hidden" name="pickUpAirportId" value="@ViewBag.SearchParams?.PickUpAirportId">
                                <input type="hidden" name="dropOffAirportId" value="@ViewBag.SearchParams?.DropOffAirportId">
                                <input type="hidden" name="pickUpDate" value="@ViewBag.SearchParams?.PickUpDate?.ToString("yyyy-MM-dd")">
                                <input type="hidden" name="dropOffDate" value="@ViewBag.SearchParams?.DropOffDate?.ToString("yyyy-MM-dd")">
                                
                                <div class="row">
                                    <div class="col-md-3">
                                        <label class="form-label">Min Fiyat</label>
                                        <input type="number" name="minPrice" class="form-control" placeholder="0" value="@Context.Request.Query["minPrice"]">
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">Max Fiyat</label>
                                        <input type="number" name="maxPrice" class="form-control" placeholder="10000" value="@Context.Request.Query["maxPrice"]">
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">Min Model Yılı</label>
                                        <input type="number" name="minYear" class="form-control" placeholder="2010" value="@Context.Request.Query["minYear"]">
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">Max Model Yılı</label>
                                        <input type="number" name="maxYear" class="form-control" placeholder="2024" value="@Context.Request.Query["maxYear"]">
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-3">
                                        <label class="form-label">Min Puan</label>
                                        <input type="number" name="minRating" class="form-control" placeholder="1" min="1" max="5" value="@Context.Request.Query["minRating"]">
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">Max Puan</label>
                                        <input type="number" name="maxRating" class="form-control" placeholder="5" min="1" max="5" value="@Context.Request.Query["maxRating"]">
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">Max Kilometre</label>
                                        <input type="number" name="maxKm" class="form-control" placeholder="100000" value="@Context.Request.Query["maxKm"]">
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">Min Kilometre</label>
                                        <input type="number" name="minKm" class="form-control" placeholder="0" value="@Context.Request.Query["minKm"]">
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-12">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-search"></i> Filtrele
                                        </button>
                                        <a href="@Url.Action("SearchCars", "Car", new { 
                                            carType = ViewBag.SearchParams?.CarType,
                                            pickUpAirportId = ViewBag.SearchParams?.PickUpAirportId,
                                            dropOffAirportId = ViewBag.SearchParams?.DropOffAirportId,
                                            pickUpDate = ViewBag.SearchParams?.PickUpDate?.ToString("yyyy-MM-dd"),
                                            dropOffDate = ViewBag.SearchParams?.DropOffDate?.ToString("yyyy-MM-dd")
                                        })" class="btn btn-secondary">
                                            <i class="fas fa-times"></i> Temizle
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    
                    <div class="row">
                        @if (!string.IsNullOrEmpty(ViewBag.SearchParams?.CarType))
                        {
                            <div class="col-md-2 mb-2">
                                <span class="badge bg-primary fs-6">Araç Tipi: @ViewBag.SearchParams.CarType</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.SearchParams?.PickUpLocation))
                        {
                            <div class="col-md-3 mb-2">
                                <span class="badge bg-success fs-6">Alış: @ViewBag.SearchParams.PickUpLocation</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.SearchParams?.DropOffLocation))
                        {
                            <div class="col-md-3 mb-2">
                                <span class="badge bg-info fs-6">Teslim: @ViewBag.SearchParams.DropOffLocation</span>
                            </div>
                        }
                        @if (ViewBag.SearchParams?.PickUpDate != null)
                        {
                            <div class="col-md-2 mb-2">
                                <span class="badge bg-warning fs-6">Alış: @ViewBag.SearchParams.PickUpDate?.ToString("dd.MM.yyyy")</span>
                            </div>
                        }
                        @if (ViewBag.SearchParams?.DropOffDate != null)
                        {
                            <div class="col-md-2 mb-2">
                                <span class="badge bg-danger fs-6">Teslim: @ViewBag.SearchParams.DropOffDate?.ToString("dd.MM.yyyy")</span>
                            </div>
                        }
                    </div>
                    <div class="text-center mt-3">
                        <a href="@Url.Action("Index", "Default")" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left"></i> Yeni Arama Yap
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid py-5">
    <div class="container">
        <div class="row">
            @if (paginatedCars != null && paginatedCars.Any())
            {
                @foreach (var car in paginatedCars)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="rent-item h-100 d-flex flex-column">
                            <div class="rent-img" style="height: 250px; overflow: hidden;">
                                @if (!string.IsNullOrEmpty(car.CarImageUrl))
                                {
                                    <img class="img-fluid w-100 h-100" src="@car.CarImageUrl" alt="@car.CarName" style="object-fit: cover;">
                                }
                                else
                                {
                                    <img class="img-fluid w-100 h-100" src="https://via.placeholder.com/400x250?text=@car.CarName" alt="@car.CarName" style="object-fit: cover;">
                                }
                            </div>
                            <div class="rent-content flex-grow-1 d-flex flex-column p-3">
                                <h4 class="text-uppercase mb-3" style="min-height: 48px; display: flex; align-items: center;">@car.CarName</h4>
                                <div class="d-flex justify-content-center mb-3">
                                    @for (int i = 0; i < 5; i++)
                                    {
                                        <i class="fas fa-star @(i < car.Rating ? "text-warning" : "text-muted")"></i>
                                    }
                                </div>
                                <div class="mb-3" style="min-height: 60px;">
                                    <div class="d-flex align-items-center justify-content-center mb-2">
                                        <span class="me-3"><i class="fas fa-car text-primary me-2"></i>@car.CarType</span>
                                        <span><i class="fas fa-cogs text-primary me-2"></i>@car.Transmission</span>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-center mb-2">
                                        <span class="me-3"><i class="fas fa-calendar text-primary me-2"></i>@car.ModelYear</span>
                                        <span><i class="fas fa-users text-primary me-2"></i>@car.Seat Kişi</span>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-center">
                                        <span class="me-3"><i class="fas fa-gas-pump text-primary me-2"></i>@car.FuelType</span>
                                        <span><i class="fas fa-road text-primary me-2"></i>@car.Kilometer.ToString("N0") km</span>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center justify-content-between mt-auto">
                                    <span class="text-primary fs-2 fw-bold">₺@car.Price.ToString("N0")/gün</span>
                                    <a class="btn btn-primary py-2 px-4" href="@Url.Action("RentCar", "CarRental", new { 
                                        carId = car.CarId, 
                                        pickUpAirportId = ViewBag.SearchParams?.PickUpAirportId, 
                                        dropOffAirportId = ViewBag.SearchParams?.DropOffAirportId,
                                        pickUpDate = ViewBag.SearchParams?.PickUpDate,
                                        dropOffDate = ViewBag.SearchParams?.DropOffDate
                                    })">Kirala</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="text-center py-5">
                        <h3 class="text-muted">Arama kriterlerinize uygun araç bulunamadı.</h3>
                        <p class="text-muted">Lütfen farklı kriterlerle tekrar arama yapın.</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


