@model CQRSRentACar.CQRSPattern.Commands.AboutCommand.UpdateAboutCommand
@{
    ViewData["Title"] = "Hakkımızda Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Hakkımızda Düzenle</h3>
            </div>
            <div class="card-body">
                <form asp-action="UpdateAbout">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="AboutId" />
                    
                    <div class="form-group">
                        <label asp-for="Description1" class="control-label">Açıklama 1</label>
                        <textarea asp-for="Description1" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description1" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Description2" class="control-label">Açıklama 2</label>
                        <textarea asp-for="Description2" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description2" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="VisionDescription" class="control-label">Vizyon Açıklaması</label>
                        <textarea asp-for="VisionDescription" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="VisionDescription" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="MisionDescription" class="control-label">Misyon Açıklaması</label>
                        <textarea asp-for="MisionDescription" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="MisionDescription" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="Güncelle" class="btn btn-primary" />
                        <a asp-action="AboutList" class="btn btn-secondary">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
