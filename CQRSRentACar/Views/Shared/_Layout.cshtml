<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Cental - Car Rent Website Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,400;0,700;0,900;1,400;1,700;1,900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <link href="@Url.Content("~/Cental-1.0.0/lib/animate/animate.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Cental-1.0.0/lib/owlcarousel/assets/owl.carousel.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Cental-1.0.0/css/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Cental-1.0.0/css/style.css")" rel="stylesheet">
</head>

<body>
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    @await Component.InvokeAsync("_HeaderComponentPartial")
    <div class="main-content">
        @RenderBody()
    </div>
    
    @await Component.InvokeAsync("_FooterComponentPartial")

    @await Html.PartialAsync("_ChatbotWidget")

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Cental-1.0.0/lib/wow/wow.min.js"></script>
    <script src="~/Cental-1.0.0/lib/easing/easing.min.js"></script>
    <script src="~/Cental-1.0.0/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Cental-1.0.0/lib/counterup/counterup.min.js"></script>
    <script src="~/Cental-1.0.0/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/Cental-1.0.0/js/main.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const spinner = document.getElementById('spinner');
            if (spinner) {
                spinner.style.display = 'none';
                console.log('Sayfa yüklendi, spinner kapatıldı.');
            }
            
            if (typeof WOW === 'function') {
                new WOW().init();
            }
            
            if (typeof AOS === 'object') {
                AOS.init({
                    duration: 800,
                    easing: 'ease-in-out'
                });
            }
            
            const anchorLinks = document.querySelectorAll('a[href^="#"]');
            anchorLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        const headerOffset = 80;
                        const elementPosition = targetElement.offsetTop;
                        const offsetPosition = elementPosition - headerOffset;
                        window.scrollTo({
                            top: offsetPosition,
                            behavior: 'smooth'
                        });
                    }
                });
            });
        });
        
        window.addEventListener('error', function(e) {
            console.error('Sayfa hatası:', e.message, e.filename, 'satır:', e.lineno);
        });
    </script>
</body>

</html>
