@model List<CQRSRentACar.CQRSPattern.Results.CarResults.GetCarQueryResult>

<div class="container-fluid py-5">
    <div class="container">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize mb-3">En Popüler <span class="text-primary">Araçlar</span></h1>
            <p class="mb-0">En yüksek puana sahip araçlarımızı keşfedin</p>
        </div>
        <div class="row g-5">
            @foreach (var car in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="rent-item h-100">
                        <div class="rent-img" style="height: 250px; overflow: hidden;">
                            @if (!string.IsNullOrEmpty(car.CarImageUrl))
                            {
                                <img class="img-fluid w-100 h-100" src="@car.CarImageUrl" alt="@car.CarName" style="object-fit: cover;">
                            }
                            else
                            {
                                <img class="img-fluid w-100 h-100" src="https://via.placeholder.com/400x250?text=@car.CarName" alt="@car.CarName" style="object-fit: cover;">
                            }
                        </div>
                        <div class="rent-content p-4">
                            <h4 class="text-uppercase mb-3">@car.CarName</h4>
                            <div class="d-flex justify-content-center mb-3">
                                @for (int i = 0; i < 5; i++)
                                {
                                    <i class="fas fa-star @(i < car.Rating ? "text-warning" : "text-muted")"></i>
                                }
                            </div>
                            <div class="d-flex align-items-center justify-content-center mb-3">
                                <span class="me-3"><i class="fas fa-car text-primary me-2"></i>@car.CarType</span>
                                <span class="me-3"><i class="fas fa-cogs text-primary me-2"></i>@car.Transmission</span>
                                <span><i class="fas fa-calendar text-primary me-2"></i>@car.ModelYear</span>
                            </div>
                            <div class="d-flex align-items-center justify-content-center mb-3">
                                <span class="me-3"><i class="fas fa-users text-primary me-2"></i>@car.Seat Kişi</span>
                                <span class="me-3"><i class="fas fa-gas-pump text-primary me-2"></i>@car.FuelType</span>
                                <span><i class="fas fa-road text-primary me-2"></i>@car.Kilometer.ToString("N0") km</span>
                            </div>
                            <div class="text-center">
                                <span class="text-primary fs-2 fw-bold">₺@car.Price.ToString("N0")/gün</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
